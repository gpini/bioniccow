<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="main_text">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="main_row">
        <item name="android:minHeight">40dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>
    <style name="item_grid">
        <item name="android:minHeight">30dp</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="gridStyle">
        <item name="android:numColumns">auto_fit</item>
		<item name="android:columnWidth">130dp</item>
		<item name="android:gravity">center</item>
		<item name="android:stretchMode">spacingWidthUniform</item>
    </style>
   <style name="standard">
       <item name="android:textStyle">normal</item>
       <item name="android:textColor">@color/black</item>
       <item name="android:textSize">16sp</item>
    </style>
    <style name="location">
       <item name="android:textStyle">normal</item>
       <item name="android:textColor">@color/dark_orange</item>
       <item name="android:textSize">16sp</item>
    </style>
    <style name="tag">
       <item name="android:textStyle">normal</item>
       <item name="android:textColor">@color/blue</item>
       <item name="android:textSize">16sp</item>
    </style>
    <style name="smartlist">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>
    
</resources>